@model Medinova.Models.Department
@{
    ViewBag.Title = "Departman Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-warning">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="fas fa-edit"></i> Departman Bilgilerini Düzenle</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @* Güncelleme işlemi için Id mutlaka gizli alan olarak eklenmelidir *@
                @Html.HiddenFor(model => model.DepartmentId)

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Name, "Departman Adı", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Departman Adı..." } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mt-4 border-top pt-3 text-end">
                        @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-outline-secondary px-4 me-2" })
                        <button type="submit" class="btn btn-warning px-4 fw-bold">
                            <i class="fas fa-sync-alt"></i> Güncelle
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

