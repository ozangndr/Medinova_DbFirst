@model Medinova.Models.Doctor
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-warning">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="fas fa-user-edit"></i> Doktor Bilgilerini Güncelle</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @* ÖNEMLİ: ID bilgisini gizli olarak tutmalıyız ki hangi kaydı güncellediğimizi bilelim *@
                @Html.HiddenFor(model => model.DoctorId)

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.FullName, "Ad Soyad", new { @class = "form-label fw-bold" })
                                @Html.EditorFor(model => model.FullName, "Ad Soyad", new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.DepartmentId, "Departman", new { @class = "form-label fw-bold" })

                                @* null yerine (SelectList)ViewBag.DepartmentList yazıyoruz *@
                                @Html.DropDownList("DepartmentId", (SelectList)ViewBag.DepartmentList, "-- Departman Seçiniz --", htmlAttributes: new { @class = "form-select" })

                                @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.ImageUrl, "Resim", new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    @Html.EditorFor(model => model.ImageUrl, "Resim", new { htmlAttributes = new { @class = "form-control", id = "imgInput" } })
                                </div>
                                <div class="mt-2">
                                    <small class="text-muted d-block mb-1">Mevcut/Yeni Görsel Önizleme:</small>
                                    <img src="@Model.ImageUrl" id="imgPreview" class="rounded border" style="width: 100px; height: 100px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/100?text=Yok'">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                @Html.LabelFor(model => model.Description, "Açıklama", new { @class = "form-label fw-bold" })

                                @Html.TextAreaFor(model => model.Description, new
                                {
                                    @class = "form-control",
                                    @rows = "5",
                                    @placeholder = "Doktor hakkında kısa bilgi...",
                                    @style = "resize:none;" // Kullanıcının kutuyu manuel büyütüp tasarımı bozmasını istemiyorsan bunu ekleyebilirsin
                                })

                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 border-top pt-3 text-end">
                        @Html.ActionLink("Vazgeç", "Index", null, new { @class = "btn btn-outline-secondary px-4 me-2" })
                        <button type="submit" class="btn btn-warning px-5 fw-bold">
                            <i class="fas fa-sync-alt"></i> Değişiklikleri Kaydet
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // URL kutusuna yeni link yapıştırıldığında önizlemeyi anlık değiştirir
        document.getElementById('imgInput').addEventListener('input', function () {
            document.getElementById('imgPreview').src = this.value;
        });
    </script>
}

