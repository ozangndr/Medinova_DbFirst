@model List<Medinova.Models.PriceItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">

        <h2><i class="fas fa-user-md"></i>@ViewBag.pricetitle</h2>

        <a href="@Url.Action("Create", new { id = ViewBag.ActivePriceId })" class="btn btn-primary">

            <i class="fas fa-plus"></i> Yeni item Ekle
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">#</th>
                        <th>Açıklama</th>
                        <th class="text-end" style="width: 200px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td class="align-middle fw-bold">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="align-middle text-end">
                                <div class="btn-group shadow-sm" role="group">

                                    <a href="@Url.Action("Update", new { id = item.PriceItemId })"
                                       class="btn btn-outline-warning btn-sm d-inline-flex align-items-center px-3">
                                        <i class="fas fa-pencil-alt me-1"></i> Düzenle
                                    </a>

                                    <button type="button"
                                            class="btn btn-outline-danger btn-sm d-inline-flex align-items-center px-3 btn-delete"
                                            data-id="@item.PriceItemId"
                                            data-name="@count">
                                        <i class="fas fa-trash-alt me-1"></i> Sil
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.querySelectorAll('.btn-delete').forEach(button => {
        button.addEventListener('click', function () {
            const id = this.getAttribute('data-id');
            const name = this.getAttribute('data-name');

            Swal.fire({
                title: 'Emin misiniz?',
                text: `${name} numaralı kayıt kalıcı olarak silinecektir!`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Evet, Sil!',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Silme işlemi için Controller'daki Delete metoduna yönlendir
                    window.location.href = "/Admin/PriceItem/Delete/" + id;
                }
            });
        });
    });
</script>


