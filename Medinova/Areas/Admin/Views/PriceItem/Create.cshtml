@model Medinova.Models.PriceItem
@{
    ViewBag.Title = "Yeni Madde Kaydı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Yeni İtem Kaydı</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("PriceId", (int)ViewBag.priceId)

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Description, "Açıklama", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Örn: Tam Kan Sayımı..." } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mt-4 border-top pt-3">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                        <a href="@Url.Action("Index", new { id = ViewBag.priceId })" class="btn btn-outline-secondary ms-2">Listeye Dön</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>