@model Medinova.Models.User
@{
    ViewBag.Title = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white p-3">
                    <h4 class="mb-0"><i class="fas fa-user-edit me-2"></i> Profil Bilgilerimi Güncelle</h4>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.UserId)

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Adınız</label>
                                @Html.TextBoxFor(m => m.FirtName, new { @class = "form-control", required = "required" })
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Soyadınız</label>
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", required = "required" })
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Kullanıcı Adı (E-posta)</label>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", required = "required" })
                        </div>

                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <label class="form-label fw-bold text-danger"><i class="fas fa-key me-1"></i> Şifre Değiştir</label>
                                <input type="password" name="NewPassword" class="form-control" placeholder="Değiştirmek istemiyorsanız boş bırakın" />
                                <small class="text-muted">Şifreniz en az 6 karakter olmalıdır.</small>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary px-5 py-2 fw-bold">
                                <i class="fas fa-save me-1"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>