@model Medinova.Models.Price
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Yeni Teklif Kaydı</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Title, "Başlık", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Başlık..." } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Price1, "Fiyat", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(model => model.Price1, new { htmlAttributes = new { @class = "form-control", placeholder = "Fiyat..." } })
                            @Html.ValidationMessageFor(model => model.Price1, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mt-4 border-top pt-3">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                        @Html.ActionLink("Listeye Dön", "Index", null, new { @class = "btn btn-outline-secondary ms-2" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>


