@model Medinova.Models.AboutItem
@{
    ViewBag.Title = "Yeni Madde Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Yeni Hakkımızda Maddesi</h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group mb-4">
                                @Html.LabelFor(model => model.Name, "Madde Metni", new { @class = "form-label fw-bold" })
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Örn: 7/24 Kesintisiz Hizmet" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group mb-4">
                                @Html.LabelFor(model => model.Icon, "İkon Class Adı", new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i id="iconPreview" class="fas fa-search text-primary"></i>
                                    </span>
                                    @Html.EditorFor(model => model.Icon, new { htmlAttributes = new { @class = "form-control", id = "iconInput", placeholder = "Örn: https://www.pngegg.com/en/search?q=sa%C4%9Fl%C4%B1k" } })
                                </div>
                                
                                @Html.ValidationMessageFor(model => model.Icon, "", new { @class = "text-danger" })
                            </div>

                            <hr />

                            <div class="d-flex justify-content-between pt-2">
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4">
                                    <i class="fas fa-arrow-left"></i> Listeye Dön
                                </a>
                                <button type="submit" class="btn btn-primary px-5">
                                    <i class="fas fa-save"></i> Maddeyi Kaydet
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // İkon kutusuna yazıldıkça yandaki önizlemeyi güncelleyen script
        document.getElementById('iconInput').addEventListener('input', function () {
            var iconClass = this.value;
            var previewElement = document.getElementById('iconPreview');

            // Eğer kutu boşsa varsayılan büyüteç ikonunu göster
            if (iconClass.trim() === "") {
                previewElement.className = "fas fa-search text-primary";
            } else {
                previewElement.className = iconClass + " text-primary";
            }
        });
    </script>
}