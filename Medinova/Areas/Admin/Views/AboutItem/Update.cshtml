@model Medinova.Models.AboutItem
@{
    ViewBag.Title = "Madde Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Hakkımızda Maddesini Düzenle</h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @* Güncelleme için Id'yi gizli tutuyoruz *@
                        @Html.HiddenFor(model => model.AboutItemId)

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group mb-4">
                                @Html.LabelFor(model => model.Name, "Madde Başlığı", new { @class = "form-label fw-bold" })
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group mb-4">
                                @Html.LabelFor(model => model.Icon, "İkon Class Adı", new { @class = "form-label fw-bold" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        @* Mevcut ikon sayfa açıldığında burada görünür *@
                                        <i id="iconPreview" class="@(string.IsNullOrEmpty(Model.Icon) ? "fas fa-search" : Model.Icon) text-primary"></i>
                                    </span>
                                    @Html.EditorFor(model => model.Icon, new { htmlAttributes = new { @class = "form-control", id = "iconInput" } })
                                </div>
                                <div class="form-text mt-2">
                                    <small>Mevcut ikon: <code class="text-primary">@Model.Icon</code></small>
                                </div>
                                @Html.ValidationMessageFor(model => model.Icon, "", new { @class = "text-danger" })
                            </div>

                            <hr />

                            <div class="d-flex justify-content-between pt-2">
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4">
                                    İptal
                                </a>
                                <button type="submit" class="btn btn-warning px-5 fw-bold">
                                    <i class="fas fa-sync-alt"></i> Güncelle
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Sayfa yüklendiğinde ve yazıldığında ikonu anlık günceller
        const iconInput = document.getElementById('iconInput');
        const iconPreview = document.getElementById('iconPreview');

        iconInput.addEventListener('input', function () {
            const iconClass = this.value.trim();
            iconPreview.className = iconClass === "" ? "fas fa-search text-primary" : iconClass + " text-primary";
        });
    </script>
}