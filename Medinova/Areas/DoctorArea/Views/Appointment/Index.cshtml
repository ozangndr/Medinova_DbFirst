@model List<Medinova.Models.Appointment>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutdr.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card mb-4">
        <div class="card-body">
            @using (Html.BeginForm("Index", "Appointment", FormMethod.Get, new { @class = "row g-3" }))
            {                
                <div class="col-md-4">
                    <label class="form-label fw-bold">Tarih</label>
                    <input type="date" name="date" class="form-control" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Sorgula</button>
                </div>
            }
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Randevu Kayıtları</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Hasta</th>
                        <th>Telefon</th>
                        <th>Doktor</th>
                        <th>Tarih & Saat</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.FullName</strong></td>
                            <td>@item.PhoneNumber</td>
                            <td>Dr. @item.Doctor.FullName</td>
                            <td>
                                <i class="far fa-calendar-alt me-1"></i> @(((DateTime)item.AppointmentDate).ToString("dd.MM.yyyy"))
                                <br />
                                <i class="far fa-clock me-1"></i> @item.AppointmentTime
                            </td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <span class="badge bg-success">Onaylı</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Bekliyor</span>
                                }
                            </td>
                            <td class="text-end">
                                <a href="@Url.Action("Details", new { id = item.Appointment1 })" class="btn btn-sm btn-info text-white"><i class="fas fa-eye"></i></a>
                                <a href="@Url.Action("Cancel", new { id = item.Appointment1 })" class="btn btn-sm btn-danger"><i class="fas fa-times"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

