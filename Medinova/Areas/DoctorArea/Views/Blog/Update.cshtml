@model Medinova.Models.Blog
@{
    ViewBag.Title = "Blog Güncelle";
    Layout = "~/Views/Shared/_Layoutdr.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="fas fa-pencil-alt me-2"></i>Blog Yazısını Düzenle</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.BlogId)

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Title, "Başlık", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Başlık..." } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Description, "İçerik/Açıklama", new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "5", placeholder = "Blog içeriğini buraya yazınız..." })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="mt-4 border-top pt-3 text-end">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary px-4 me-2">
                            <i class="fas fa-undo"></i> Vazgeç
                        </a>
                        <button type="submit" class="btn btn-warning px-5 shadow">
                            <i class="fas fa-save me-1"></i> Değişiklikleri Kaydet
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>